<h2><%= @activity.title %></h2>
<hr>

<h3><%= @activity.description %></h3>
<h3><%= @activity.formatted_date %></h3>

<!-- see to-do lists -->
<!-- remove if no to-dos -->
<% if !@activity.lists.empty? %>
  <hr>
  <h2> Drop To-Dos </h2>
  <% @activity.lists.each do |list| %>
    <h3><p><%= link_to list.name.titlecase, list_path(list) %></h3></p>
  <% end %>
<% else %>
  <% nil %>
<% end %>

<!-- add to-do list -->
<h4>Add A To-Do List to Your Drop!</h4>

<%= form_for @activity do |f| %>
  <%= fields_for :lists do |ff| %>
    <p><%= ff.label "List Name" %></p>
    <%= ff.text_field :name %>
  <% end %>
  <p><%= f.submit "Add Drop to Bucket" %></p>
<% end %>


<hr>
<%= link_to 'View All of My Drops', activities_path %> :
<%= link_to 'Go Back to My User Page', user_path(@activity.user) %> :
<%= link_to 'Edit This Drop', edit_activity_path(@activity) %>

<hr>
<h2><%= "#{@activity.countdown} days until this drop is due!" %></h2>
