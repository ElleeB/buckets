<h2>Your Drop: <%= @activity.title %></h2>
<% @activity.categories.each do |cat| %>
  <h2>Categories: <p><%= cat.name %></p>
<% end %>
<h2>Description</h2><h3><%= @activity.description %></h3>
<h4><p> Due Date: <%= @activity.formatted_date %> </p></h4>

<hr>
<!-- if past due -->
<h3><%= past_due(@activity) %></h3>

<hr>
<!-- mark activity complete -->
<%= form_for @activity do |f| %>
  <%= f.check_box :complete, value: @activity.complete %> Mark Complete
  <%= f.submit 'Update' %>
<% end %>

<!-- if activity has to-do lists -->
<% if @activity.any_lists? %>
  <% display_activity_lists(@activity).each do |html| %>
    <%= raw(html) %>
  <% end %>
<% end %>

<!-- add to-do list -->
<h4>Add A New To-Do List!</h4>

<%= form_for @activity do |f| %>
  <%= fields_for :lists do |ff| %>
    <p><%= ff.label "List Name" %></p>
    <%= ff.text_field :name %>
  <% end %>
  <p><%= f.submit "Create To-Do List" %></p>
<% end %>

<hr>
<p><%= link_to 'Edit This Drop', edit_activity_path(@activity) %></p>
<p><%= link_to 'Add A Drop to My Bucket', new_activity_path(@activity) %></p>
<p><%= link_to 'View All of My Drops', activities_path %></p>
<p><%= link_to 'Go Back to My User Page', user_path(@activity.user) %></p>
