<h3> <%= @list.name.titlecase %> </h3>

<!-- reduce the logic in this view!! -->

<hr>
<% if incomplete_items? %>
  <%= form_for @list do |f| %>
    <% display_incomplete_items(@list).each do |html| %>
      <%= raw(html) %>
    <% end %>
    <%= f.submit 'Mark Item Complete' %>
  <% end %>
  <hr>
<% end %>

<!-- option to see accomplished items (with checkbox checked) -->

<h4>Add an item to your to-do list!</h4>
<%= form_for @list do |f| %>
  <%= fields_for :items do |f| %>
    <%= f.label "Item Name" %>
    <%= f.text_field :name %>
  <% end %>
  <%= f.submit %>
<% end %>

<hr>
<p><%= link_to 'Back to my drop', activity_path(@list.activity_id) %></p>
<p><%= link_to 'Back to my user page', user_path(@list.user_id) %></p>
<p><%= link_to 'Delete To-Do List', "/list/#{@list.id}/delete" %></p>


