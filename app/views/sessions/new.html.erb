<% if !flash[:notice].nil? %>
  <h4><i><p><%= flash[:notice] %></p></i></h4>
<% end %>

<!-- instead of flash message, error messages? -->

<h3>Login</h3>

<%= form_tag '/login' do %>
  <%= text_field_tag 'user[email]', '', :placeholder => "enter your email" %>
  <%= password_field_tag 'user[password]', '', :placeholder => "enter your password" %>
  <%= submit_tag 'Log In' %>
<% end %>
