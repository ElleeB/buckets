<h3>NEW USER FORM!</h3>

<%= form_for @user do |f| %>
  <p><%= f.label "Name" %></p>
  <%= f.text_field :name %>
  <p><%= f.label "Username" %></p>
  <%= f.text_field :username %>
  <p><%= f.label "Email" %></p>
  <%= f.text_field :email %>
  <p><%= f.label "Password" %></p>
  <%= f.text_field :password %>
  <p><%= f.label "Re-Enter Password" %></p>
  <%= f.text_field :password_confirmation %>
  <p><%= f.submit %></p>
<% end %>
