<!-- if user has any incomplete activities -->
<% if !@user.incomplete_activities.empty? &&
  # if there are activity deadlines approaching
  !@user.upcoming_activities.empty? %>

  <hr>
  <h3> Upcoming Drop Deadlines </h3>

  <% @user.incomplete_activities.each do |activity| %>
    <p><%= link_to "#{activity.title} | Due: #{activity.formatted_date}", activity_path(activity)  %></p>
  <% end %>
<% end %>
